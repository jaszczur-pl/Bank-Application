@model BankApplication.Models.Payment

@{
    Layout = null;
    if (Session["userID"] == null) {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <style>
        #box {
            width: 1000px;
            margin-left: auto;
            margin-right: auto;
        }

        #logo {
            background-color: cornflowerblue;
            color: white;
            text-align: center;
            padding: 10px;
        }

        #nav {
            float: left;
            background-color: lightblue;
            width: 120px;
            min-height: 620px;
            padding: 10px;
        }

        #content {
            float: left;
            padding: 20px;
            width: 640px;
        }

        #ad {
            float: left;
            width: 160px;
            min-height: 620px;
            padding: 10px;
            background-color: lightblue;
        }

        #footer {
            clear: both;
            background-color: cornflowerblue;
            color: white;
            text-align: center;
            padding: 20px;
        }
        #transaction {
            position: absolute;
            left: 35%;
        }
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>

    <div id="box">
        <div id="logo">
            <h1>Bank Application</h1>
        </div>

        <div id="nav">
            <a href="@Url.Action("Index", "Home")" style="float:right">Back</a></br></br>
        </div>

        <div id="content">
            @using (Html.BeginForm("MakeTransfer", "Home", FormMethod.Post)) {
                <table id="transaction">
                    <tr>
                        <td height="50">
                            @Html.LabelFor(model => model.BeneficiaryAccount)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.BeneficiaryAccount)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.BeneficiaryAccount)
                        </td>
                    </tr>
                    <tr>
                        <td height="50">
                            @Html.LabelFor(model => model.Amount)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.Amount)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.Amount, null, new { @class = "validation" })
                        </td>
                    </tr>
                    <tr>
                        <td height="50">
                            @Html.LabelFor(model => model.Title)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.Title)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.Title)
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" name="name" value="Submit" />
                        </td>
                    </tr>
                </table>
            }
            </div>

        <div id="ad">

        </div>

        <div id="footer">
            Bank Application &copy; Maciej Jaszczura, Małgorzata Kucharska
        </div>
    </div>

</body>
</html>
