@model IEnumerable<BankApplication.Models.Payment>

@{
    Layout = null;
    if (Session["userID"] == null) {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <style>
        #box {
            width: 1000px;
            margin-left: auto;
            margin-right: auto;
        }

        #logo {
            background-color: cornflowerblue;
            color: white;
            text-align: center;
            padding: 10px;
        }

        #nav {
            float: left;
            background-color: lightblue;
            width: 120px;
            min-height: 620px;
            padding: 10px;
        }

        #content {
            float: left;
            padding: 20px;
            width: 640px;
        }

        #ad {
            float: left;
            width: 160px;
            min-height: 620px;
            padding: 10px;
            background-color: lightblue;
        }

        #footer {
            clear: both;
            background-color: cornflowerblue;
            color: white;
            text-align: center;
            padding: 20px;
        }
    </style>
</head>
<body>

    <div id="box">
        <div id="logo">
            <h1>Bank Application</h1>
        </div>

        <div id="nav">
            <a href="@Url.Action("Index", "Home")" style="float:right">Back</a></br></br>
        </div>

        <div id="content">
            <table frame="border" style="width=100%">
                <tr>
                    <th width="200" height="50">@Html.LabelFor(model => model.First().PaymentID)</th>

                    <th width="200" height="50">@Html.LabelFor(model => model.First().BeneficiaryAccount)</th>

                    <th width="200" height="50">@Html.LabelFor(model => model.First().Amount)</th>

                    <th width="200" height="50">@Html.LabelFor(model => model.First().Title)</th>
                </tr>
                @foreach (var item in Model) {
                <tr>
                    <td width="200" height="30">@Html.DisplayFor(modelItem => item.PaymentID)</td>

                    <td width="200" height="30">@Html.DisplayFor(modelItem => item.BeneficiaryAccount)</td>

                    <td width="200" height="30">@Html.DisplayFor(modelItem => item.Amount)</td>

                    <td width="200" height="30">@Html.DisplayFor(modelItem => item.Title)</td>
                </tr>
                    
                }
            </table>

        </div>

        <div id="ad">

        </div>

        <div id="footer">
            Bank Application &copy; Maciej Jaszczura, Małgorzata Kucharska
        </div>
    </div>

</body>
</html>
